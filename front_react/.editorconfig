# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

# 2 space indentation
indent_style = space
indent_size = 2

# TypeScript/JavaScript specific
[*.{js,jsx,ts,tsx,mjs,cjs}]
indent_style = space
indent_size = 2

# JSON files
[*.json]
indent_style = space
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# HTML files
[*.{html,htm}]
indent_style = space
indent_size = 2

# CSS/SCSS/LESS files
[*.{css,scss,less,sass}]
indent_style = space
indent_size = 2

# Vue files
[*.vue]
indent_style = space
indent_size = 2

# Svelte files
[*.svelte]
indent_style = space
indent_size = 2

# XML files
[*.{xml,svg}]
indent_style = space
indent_size = 2

# Markdown files (may need 4 spaces for code blocks)
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# Package files
[{package.json,package-lock.json,yarn.lock,pnpm-lock.yaml}]
indent_style = space
indent_size = 2

# Configuration files
[*.{toml,ini}]
indent_style = space
indent_size = 2

# Makefile needs tabs
[{Makefile,makefile,*.mk}]
indent_style = tab
indent_size = 4

# Go files prefer tabs
[*.go]
indent_style = tab
indent_size = 4

# Python files commonly use 4 spaces
[*.py]
indent_style = space
indent_size = 4